{
  "name": "@cerbos/orm-prisma",
  "version": "3.1.1",
  "homepage": "https://cerbos.dev",
  "description": "Prisma adapter for Cerbos query plans",
  "repository": {
    "type": "git",
    "url": "https://github.com/cerbos/query-plan-adapters",
    "directory": "packages/prisma"
  },
  "bugs": {
    "url": "https://github.com/cerbos/query-plan-adapters/issues"
  },
  "author": "Cerbos <help@cerbos.dev> (https://cerbos.dev)",
  "license": "Apache-2.0",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "default": "./lib/index.js"
    }
  },
  "files": [
    "lib/**/*.d.ts",
    "lib/**/*.d.ts.map",
    "lib/**/*.js",
    "lib/**/*.js.map",
    "src/**/*.ts",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "scripts": {
    "clean": "rimraf lib",
    "build": "tsc --build",
    "prepare": "npm run build",
    "version": "git add -A src",
    "prisma:generate": "bash scripts/generate-clients.sh",
    "test": "npm run test:v7",
    "test:v6": "node node_modules/prisma-v6/build/index.js db push --force-reset --schema=prisma/schema.v6.prisma && PRISMA_VERSION=6 cerbos run --log-level=error --set=storage.disk.directory=../policies --set=telemetry.disabled=true -- jest src/**.test.ts",
    "test:v7": "node node_modules/prisma/build/index.js db push --force-reset && PRISMA_VERSION=7 cerbos run --log-level=error --set=storage.disk.directory=../policies --set=telemetry.disabled=true -- jest src/**.test.ts",
    "cerbos": "cerbos server --config=./cerbos-config.yaml"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@prisma/adapter-better-sqlite3": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "@prisma/client-v6": "npm:@prisma/client@^6.0.0",
    "@tsconfig/node24": "^24.0.3",
    "@tsconfig/strictest": "^2.0.8",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.0",
    "expect-type": "^1.1.0",
    "prisma": "^7.2.0",
    "prisma-v6": "npm:prisma@^6.0.0",
    "rimraf": "^6.0.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.4.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "@prisma/client": "^5.0.0 || ^6.0.0 || ^7.0.0"
  },
  "dependencies": {
    "@cerbos/core": "^0.27.0",
    "@cerbos/grpc": "^0.24.0"
  },
  "keywords": [
    "cerbos",
    "prisma",
    "orm",
    "authorization",
    "permissions"
  ]
}
