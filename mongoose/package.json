  "homepage": "https://cerbos.dev",
  "description": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/cerbos/query-plan-adapters",
    "directory": "packages/mongoose"
  },
  "bugs": {
    "url": "https://github.com/cerbos/query-plan-adapters/issues"
  },
  "author": "Cerbos <help@cerbos.dev> (https://cerbos.dev)",
  "license": "Apache-2.0",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "default": "./lib/index.js"
    }
  },
  "files": [
    "lib/**/*.d.ts",
    "lib/**/*.d.ts.map",
    "lib/**/*.js",
    "lib/**/*.js.map",
    "src/**/*.ts",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "scripts": {
    "build": "tsc --build",
    "prepare": "npm run build",
    "version": "git add -A src",
    "postversion": "git push && git push --tags",
    "mongo": "docker run --rm -p 27017:27017 --name test-mongo -v ./data:/data/db mongo:latest",
    "test": "cerbos run --log-level=debug --set=storage.disk.directory=../policies --set=telemetry.disabled=true -- jest src/**.test.ts",
    "cerbos": "cerbos server --config=./cerbos-config.yaml"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
