{
  "name": "@cerbos/orm-drizzle",
  "version": "0.1.0",
  "homepage": "https://cerbos.dev",
  "description": "Drizzle ORM adapter for Cerbos query plans",
  "private": false,
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/types/index.d.ts",
  "exports": {
    ".": {
      "require": "./lib/cjs/index.js",
      "import": "./lib/esm/index.js",
      "types": "./lib/types/index.d.ts"
    }
  },
  "files": [
    "lib",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf lib",
    "build": "npm run clean && npm run build:types && npm run build:cjs && npm run build:esm",
    "build:types": "tsc -p tsconfig.types.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test",
    "version": "git add -A src",
    "test": "cerbos run --log-level=error --set=storage.disk.directory=../policies --set=telemetry.disabled=true -- jest --runInBand"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "Cerbos",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.0.0",
    "better-sqlite3": "^9.6.0",
    "drizzle-orm": "^0.44.6",
    "jest": "^29.7.0",
    "rimraf": "^6.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.0"
  },
  "peerDependencies": {
    "drizzle-orm": "^0.44.0"
  },
  "dependencies": {
    "@cerbos/core": "^0.24.0",
    "@cerbos/grpc": "^0.23.0",
    "tslib": "^2.8.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "cerbos",
    "drizzle",
    "orm",
    "authorization",
    "permissions"
  ]
}
