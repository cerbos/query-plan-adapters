{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "schedule:earlyMondays",
    "config:recommended",
    "docker:disable",
    "group:allNonMajor",
    ":separateMultipleMajorReleases",
    ":gitSignOff",
    "helpers:pinGitHubActionDigests"
  ],
  "automerge": true,
  "automergeSchedule": [
    "after 9am and before 5pm Monday"
  ],
  "major": {
    "automerge": false
  },
  "dependencyDashboard": true,
  "baseBranchPatterns": [
    "main"
  ],
  "additionalReviewers": [
    "alexolivier"
  ]
}
