{
  "name": "@cerbos/orm-convex",
  "version": "0.1.0",
  "homepage": "https://cerbos.dev",
  "description": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/cerbos/query-plan-adapters",
    "directory": "packages/convex"
  },
  "bugs": {
    "url": "https://github.com/cerbos/query-plan-adapters/issues"
  },
  "author": "Cerbos <help@cerbos.dev> (https://cerbos.dev)",
  "license": "Apache-2.0",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "default": "./lib/index.js"
    }
  },
  "files": [
    "lib/**/*.d.ts",
    "lib/**/*.d.ts.map",
    "lib/**/*.js",
    "lib/**/*.js.map",
    "src/**/*.ts",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "scripts": {
    "build": "tsc --build",
    "prepare": "npm run build",
    "version": "git add -A src",
    "postversion": "git push && git push --tags",
    "test": "cerbos run --log-level=debug --set=storage.disk.directory=../policies --set=telemetry.disabled=true -- jest src/index.test.ts",
    "test:integration": "cerbos run --log-level=debug --set=storage.disk.directory=../policies --set=telemetry.disabled=true -- jest src/integration.test.ts",
    "convex:deploy": "npx convex deploy --url ${CONVEX_URL:-http://127.0.0.1:3210} --admin-key ${CONVEX_ADMIN_KEY}",
    "convex:up": "docker compose up -d && echo 'Waiting for Convex backend...' && sleep 5",
    "convex:down": "docker compose down -v",
    "cerbos": "cerbos server --config=./cerbos-config.yaml"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.0",
    "@tsconfig/node20": "^20.1.7",
    "@tsconfig/strictest": "^2.0.8",
    "convex": "^1.21.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.4.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@cerbos/core": "^0.28.0",
    "@cerbos/grpc": "^0.25.0"
  }
}
